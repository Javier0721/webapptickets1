@model List<WebAPITickets.Models.Tiquetes>
@{
    ViewBag.Title = "Listado de Tickets";
}

<h2>Tickets</h2>

<form method="get">
    <label>Filtrar por estado:</label>
    <select name="estado">
        <option value="">Todos</option>
        <option>Creado</option>
        <option>Pendiente</option>
        <option>Resuelto</option>
    </select>
    <button type="submit">Filtrar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Asunto</th>
            <th>Categoría</th>
            <th>Urgencia</th>
            <th>Importancia</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.ti_asunto</td>
                <td>@t.ti_categoria</td>
                <td>@t.ti_urgencia</td>
                <td>@t.ti_importancia</td>
                <td>@t.ti_estado</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Crear")">Nuevo Ticket</a>
