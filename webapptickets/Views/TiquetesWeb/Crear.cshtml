@page
@model CrearModel
@{
    ViewData["Title"] = "Crear Ticket";
}

<h2>Crear Ticket</h2>

<form method="post">
    <label>Asunto:</label>
    <input asp-for="Tiquete.ti_asunto" />

    <label>Categoría:</label>
    <select asp-for="Tiquete.ti_categoria">
        <option>Hardware</option>
        <option>Software</option>
        <option>Red</option>
    </select>

    <label>Urgencia:</label>
    <select asp-for="Tiquete.ti_urgencia">
        <option>Baja</option>
        <option>Media</option>
        <option>Alta</option>
    </select>

    <label>Importancia:</label>
    <select asp-for="Tiquete.ti_importancia">
        <option>Baja</option>
        <option>Media</option>
        <option>Alta</option>
    </select>

    <label>Asignado a (ID usuario):</label>
    <input asp-for="Tiquete.ti_us_id_asigna" />

    <input type="hidden" asp-for="Tiquete.ti_estado" value="Creado" />
    <input type="hidden" asp-for="Tiquete.ti_adicionado_por" value="sistema" />

    <button type="submit">Guardar</button>
</form>
